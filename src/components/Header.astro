---
// Header component with logo, tagline, and About me CTA
import logoNico from '../assets/images/logo-nico.svg';
---

<header class="header">
  <div class="container mt-md-3">
    <div class="row align-items-center">
      <div class="col-auto">
        <div class="header__brand">
          <!-- Logo -->
          <img 
            src={logoNico.src} 
            alt="nico.ar"
            style="width: 120px; height: 94px;"
          />
          <div>
            <p style="font-size: 20px; font-weight: 700; margin: 0; color: var(--text-body);">Notes on Design & Tech</p>
          </div>
        </div>
      </div>
      <div class="col"></div>
      <div class="col-auto">
        <div class="header__cta">
          <a href="#about">About me</a>
        </div>
      </div>
    </div>
  </div>
</header>
