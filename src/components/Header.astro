---
// Header component with logo, tagline, and About me CTA
import logoNico from '../assets/images/logo-nico.svg';
---

<header class="header">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-auto">
        <div class="header__brand">
          <!-- Logo -->
          <img 
            src={logoNico.src} 
            alt="Nicolas Zicarelli Logo"
            style="width: 60px; height: 60px;"
          />
          <div>
            <h1 style="font-size: 18px; margin: 0; line-height: 1.2;">nico.ar</h1>
            <p style="font-size: 14px; margin: 0; color: var(--text-body);">Notes on Design & Tech</p>
          </div>
        </div>
      </div>
      <div class="col"></div>
      <div class="col-auto">
        <div class="header__cta">
          <a href="#about">About me</a>
        </div>
      </div>
    </div>
  </div>
</header>
